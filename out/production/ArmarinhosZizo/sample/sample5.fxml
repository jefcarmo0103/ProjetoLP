<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="sample.Controller5" vgap="10">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <Label style="-fx-font: NORMAL 20 Tahoma;" text="Controle de Fornecedores" GridPane.columnIndex="0" GridPane.rowIndex="0">
    </Label>

    <HBox alignment="CENTER" GridPane.rowIndex="1" spacing="5">
        <Label text="Nome do Fornecedor:"></Label>
        <TextField promptText="Nome do Fornecedor"/>
    </HBox>

    <VBox GridPane.rowIndex="2" spacing="5">
        <TextField promptText="CNPJ"/>
        <TextField promptText="E-mail"/>
        <TextField promptText="Telefone"/>
        <TextField promptText="Contato"/>
    </VBox>

    <HBox alignment="CENTER" GridPane.rowIndex="3" spacing="5">
        <Button text="Incluir" onAction="#incluirFornecedor"/>
        <Button text="Alterar" onAction="#excluirCliente"/>
    </HBox>

    <HBox alignment="CENTER" GridPane.rowIndex="4">
        <Button text="Selecionar" onAction="#buscaExecutada"/>
    </HBox>

</GridPane>
